<section class="vh-100 d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 text-center">
                @{
                    var cultureColour = "";
                    switch (ViewBag.Culture as string)
                    {
                        case "Japanese":
                            cultureColour = "red";
                            break;
                        case "Chinese":
                            cultureColour = "green";
                            break;
                        case "Korean":
                            cultureColour = "blue";
                            break;
                        case "Filipino":
                            cultureColour = "yellow";
                            break;
                        case "Vietnamese":
                            cultureColour = "orange";
                            break;
                        default:
                            cultureColour = "black"; // Default colour
                            break;
                    }
                }

                <h2>Explore <span style="color: @cultureColour;">@ViewBag.Culture</span> Events!</h2>
                <div id="culture" data-culture="@ViewBag.Culture" style="display: none;"></div>
                <div id="calendar" class="mx-auto"></div>
                <h6 style="background-color:powderblue;"><i>Click around the Calendar to find Events for the Festivals above...</i></h6>
            </div>
        </div>
        <div class="row justify-content-center mt-3">
            <div class="col-lg-8 col-md-10">
                <div id="events-list"></div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <!-- Global Variables for passing data to custom calender script -->
    <script>
        var getCulturalDatesUrl = '@Url.Action("GetCulturalDates", "Events")';
        var getEventsFromEventbriteUrl = '@Url.Action("GetEventsFromEventbrite", "Events")';
    </script>
    @Scripts.Render("~/bundles/fullcalendar")



    <style>


#calendar {
    /* Adjustments to ensure the calendar fits within its container */
    width: 100%; /* Instead of 150% to ensure it stays within the column */
    max-width: 900px; /* Keeps your original max-width */
    margin: 0 auto;
}

.event-detail {
    margin-bottom: 20px;
    padding: 10px;
    border-radius: 5px;
    /* The border-color needs to be inline or dynamically added via script since CSS doesn't parse Razor syntax */
}

.fc-day:hover {
    background-color: #eee;
    cursor: pointer;
}

.highlighted {
    background-color: #ff0;
    border: 2px solid #f00;
}

    </style>
}
