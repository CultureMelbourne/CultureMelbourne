<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CultMelbourne</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*@Styles.Render("~/bundles/customerFontsAndStyles")*@

    <link rel="icon" href="@Url.Content("~/Content/Customer/images/logo-mobile.png")" type="image/gif" sizes="16x16">

    <link href="https://fonts.googleapis.com/css2?family=Inter+Tight:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,200;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,200;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet">

    <link href="@Url.Content("~/Content/Customer/fonts/fontawesome4/css/font-awesome.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Customer/fonts/fontawesome6/css/fontawesome.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Customer/fonts/fontawesome6/css/brands.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Customer/fonts/fontawesome6/css/solid.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Customer/fonts/elegant_font/HTML_CSS/style.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Customer/fonts/et-line-font/style.css")" rel="stylesheet" />
</head>
<body>

    <div id="wrapper">
        <!-- page preloader begin -->
        <div id="de-loader"></div>
        <!-- page preloader close -->
        <!-- header begin -->
        <header class="header-full transparent bg-warning">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="de-flex sm-pt10">
                            <div class="de-flex-col">
                                <div class="de-flex-col">
                                    <!-- logo begin -->
                                    <div id="logo">
                                        <a href="@Url.Action("Index", "Home")">
                                            <img class="logo-main" src="@Url.Content("~/Content/Customer/images/logo.png")" alt="">
                                            <img class="logo-mobile" src="@Url.Content("~/Content/Customer/images/logo-mobile.png")" alt="">
                                        </a>
                                    </div>
                                    <!-- logo close -->
                                </div>
                            </div>
                            <div class="de-flex-col header-col-mid ">
                                <ul id="mainmenu" class="">
                                    <li class=" text-white">
                                        <a class="menu-item " href="@Url.Action("Index", "Home")">Home</a>
                                    </li>
                                    <li class=" text-white">
                                        <a class="menu-item" href="@Url.Action("Index", "Education")">Culture Education</a>
                                        <ul>
                                            <li><a class="menu-item" href="@Url.Action("DiverseCultures", "Education")">Diverse Cultures</a></li>
                                            <li><a class="menu-item" href="@Url.Action("MigrationStories", "Education")">Migration Stories</a></li>
                                        </ul>
                                    </li>
                                    <li class=" text-white">
                                        <a class="menu-item" href="@Url.Action("Index", "Home")#cultural-events">Culture Events</a>
                                    </li>

                                </ul>
                            </div>
                            <div class="de-flex-col">
                                <div class="menu_side_area">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- header close -->
        <!-- content begin -->
        <div class="no-bottom no-top" id="content">
            @RenderBody()

        </div>
        <!-- content close -->
        <!-- footer begin -->
        <footer class="bg-warning">
            <div class="container ">
                <div class="row gx-5">
                    <div class="col-lg-4 col-sm-6">
                        <img class="logo-footer" src="@Url.Content("~/Content/Customer/images/logo.png")" alt="">
                        <div class="spacer-20"></div>
                        <p>Committed to celebrating Melbourne's multicultural legacy, we aim to educate and unite, combating discrimination and nurturing cultural connections.</p>
                    </div>
                    <div class="col-lg-4 col-sm-12 order-lg-1 order-sm-2">
                        <div class="row">
                            <div class="col-lg-6 col-sm-6">
                                <div class="widget">
                                    <h5>CultMelbourne</h5>
                                    <ul>
                                        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                                        <li><a href="@Url.Action("Index", "Education")">Education</a></li>
                                        <li><a href="#cultural-events">Culture Events</a></li>

                                    </ul>
                                </div>
                            </div>
                            <div class="col-lg-6 col-sm-6">
                                <div class="widget">
                                    <h5>Our Services</h5>
                                    <ul>
                                        <li><a href="#">East Asian Melodies</a></li>
                                        <li><a href="#">Discover East Asia</a></li>
                                        <li><a href="#">Voices of East Asia</a></li>
                                        <li><a href="#">Cultural Insights</a></li>

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-6 order-lg-2 order-sm-1">
                        <div class="widget">
                            <h5>Get In Touch</h5>
                            <div class="de-icon-text mb20">
                                <img src="@Url.Content("~/Content/Customer/images/svg/phone-svgrepo-com-white.svg")" class="" alt="">
                                <div class="d-text">
                                    <h4>Phone</h4>
                                    +61-1234567
                                </div>
                            </div>

                            <div class="de-icon-text mb20">
                                <img src="@Url.Content("~/Content/Customer/images/svg/email-address-svgrepo-com-white.svg")" class="" alt="">

                                <div class="d-text">
                                    <h4>Email</h4>
                                    hello@cultmelbourne.com
                                </div>
                            </div>

                            <div class="de-icon-text">
                                <img  src="@Url.Content("~/Content/Customer/images/svg/map-pin-svgrepo-com-white.svg")" class="" alt="">

                                <div class="d-text">
                                    <h4>Address</h4>
                                    21 Chancellor's Walk, Monash University, Clayton Victoria 3800
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="subfooter">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="de-flex">
                                <div class="de-flex-col">
                                    Monash University FIT5120-S1 TP03
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- footer close -->
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)

</body>
</html>
