<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - CultureMelbourne</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", required: false)

    <link rel="icon" href="@Url.Content("~/Content/Customer/images/logo-mobile.png")" type="image/gif" sizes="16x16">

    <link href="https://fonts.googleapis.com/css2?family=Inter+Tight:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,200;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,200;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet">

    <link href="@Url.Content("~/Content/Customer/fonts/fontawesome4/css/font-awesome.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Customer/fonts/fontawesome6/css/fontawesome.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Customer/fonts/fontawesome6/css/brands.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Customer/fonts/fontawesome6/css/solid.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Customer/fonts/elegant_font/HTML_CSS/style.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Customer/fonts/et-line-font/style.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/scrollToTop.css")" rel="stylesheet" />
</head>
<body class="" style="">
    <!-- page preloader begin -->
    <!-- page preloader close -->
    <!-- header begin -->
    <div class="container-fluid" style="position: relative; z-index: 1030; background: linear-gradient(to right, #FFA500, #FF8C00, #FF7F50, #FF4500); ">
        <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3">


            <a href="@Url.Action("Index", "Home")" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
                <img class="p-auto pt-1"
                     src="@Url.Content("~/Content/Customer/images/logo-mobile.png")"
                     srcset="@Url.Content("~/Content/Customer/images/logo.png") 800w,
                 @Url.Content("~/Content/Customer/images/logo-mobile.png") 400w"
                     sizes="(max-width: 768px) 100vw, 50vw"
                     alt="Responsive Logo">
            </a>
            @using TP03MainProj.Helper

            <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
                <li><a class="nav-link px-2 text-white fs-5 link-dark @NavigationHelper.IsActive(ViewContext, "Home", "Index")" href="@Url.Action("Index", "Home")">Home</a></li>

                <li><a class="nav-link px-2 text-white fs-5 link-dark @NavigationHelper.IsActive(ViewContext, "Education", "Index", "Education", "DiverseCultures")" href="@Url.Action("Index", "Education")">Culture Education</a></li>

                <li><a class="nav-link px-2 text-white fs-5 link-dark @NavigationHelper.IsActive(ViewContext, "Home", "CulturalEvents")" href="@Url.Action("Index", "Home")#cultural-events">Culture Events</a></li>

            </ul>

            <div class="col-md-3 text-end">

            </div>
            <button id="scrollToTopBtn" title="To the Top"> ↑ </button>
        </header>
    </div>

    <!-- header close -->
    <!-- content begin -->
    <div class="" style="background: linear-gradient(to right, #FFA500, #FF8C00, #FF7F50, #FF4500);">
        @RenderBody()

    </div>
    <!-- content close -->
    <!-- footer begin -->
    <div class="container-fluid bg-warning" style="background: linear-gradient(to right, #FFA500, #FF8C00, #FF7F50, #FF4500);">
        <footer class="footer py-5">
            <div class="row">
                <div class="col-4 offset-1">
                    <img class="logo-footer"
                         src="@Url.Content("~/Content/Customer/images/logo-mobile.png")"
                         srcset="@Url.Content("~/Content/Customer/images/logo.png") 800w,
                             @Url.Content("~/Content/Customer/images/logo-mobile.png") 400w"
                         sizes="(max-width: 768px) 100vw, 50vw"
                         alt="CultMelbourne Logo">
                    <div class="spacer-20"></div>
                    <p class="text-white">Committed to celebrating Melbourne's multicultural legacy, we aim to educate and unite, combating discrimination and nurturing cultural connections.</p>
                </div>
                <div class="col-2">
                </div>

                <div class="col-2">
                    <h5 class="text-white fw-bold">Culture Melbourne</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item  text-white mb-2"><a href="@Url.Action("Index", "Home")" class=" nav-link text-white p-0 ">Home</a></li>
                        <li class="nav-item  text-white mb-2"><a href="@Url.Action("Index", "Education")" class=" nav-link  text-white p-0 ">Education</a></li>
                        <li class="nav-item  text-white mb-2"><a href="#cultural-events" class="nav-link  p-0 text-white ">Culture Events</a></li>
                    </ul>
                </div>

                <div class="col-2">
                    <h5 class="text-white fw-bold">Our Services</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item  text-white mb-2"><a href="@Url.Action("Index", "Education")" class="nav-link  text-white p-0 ">East Asian Melodies</a></li>
                        <li class="nav-item  text-white mb-2"><a href="@Url.Action("Index", "Education")" class="nav-link  text-white p-0 ">Discover East Asia</a></li>
                        <li class="nav-item  text-white mb-2"><a href="@Url.Action("Index", "Education")" class="nav-link  text-white p-0 ">Voices of East Asia</a></li>
                        <li class="nav-item  text-white mb-2"><a href="@Url.Action("Index", "Education")" class="nav-link  text-white p-0 ">Cultural Insights</a></li>
                    </ul>
                </div>
            </div>

            <div class="d-flex justify-content-center border-white border-opacity-25   py-4 my-4 border-top">
                <p class="text-white">© 2024 The Quad. All rights reserved.</p>
            </div>
        </footer>
    </div>





    <!-- footer close -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/scrollToTopJS")


    @RenderSection("scripts", required: false)

</body>
</html>
