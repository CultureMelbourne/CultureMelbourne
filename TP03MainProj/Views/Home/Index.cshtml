@{
    ViewBag.Title = "Home Page";
}

<main>
    <!-- content begin -->
    <div class="no-bottom no-top" id="content">

        <div id="top"></div>

        <section class="text-light no-top no-bottom position-relative z-1000">
            <div class="v-center">
                <div class="swiper">
                    <!-- Additional required wrapper -->
                    <div class="swiper-wrapper">
                        <!-- Slides -->
                        <div class="swiper-slide" data-jarallax-element="150">
                            <div class="swiper-inner">
                                <img src="@Url.Content("~/Content/Customer/images/slider/4.jpg")" alt="Slide Image" style="width: 100%; height: auto;">
                                <div class="sw-caption">
                                    <div class="container">
                                        <div class="row gx-5 align-items-center">
                                            <div class="col-lg-8 mb-sm-20">
                                                <div class="subtitle s2 mb-4">Embracing Diversity</div>
                                                <h1 class="slider-title">Explore <span class="underline">East Asian</span> Culture</h1>

                                            </div>
                                            <div class="col-lg-6">
                                                <p class="slider-teaser">Dive into the rich history, arts, and traditions of East Asia and experience its unique charm.</p>
                                                <hr class="s2">
                                                <div class="spacer-10"></div>
                                                <a class="btn-main mb10" href="@Url.Action("DiverseCultures", "Education")">Explore Culture</a>&nbsp;
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="sw-overlay s2"></div>
                            </div>
                        </div>

                        <!-- Slides -->
                        <div class="swiper-slide" data-jarallax-element="150">
                            <div class="swiper-inner">
                                <img src="@Url.Content("~/Content/Customer/images/slider/2.jpg")" alt="Slide Image" style="width: 100%; height: auto;">
                                <div class="sw-caption">
                                    <div class="container">
                                        <div class="row gx-5 align-items-center">
                                            <div class="col-lg-8 mb-sm-20">
                                                <div class="subtitle s2 mb-4">Celebrating Traditions</div>
                                                <h1 class="slider-title">Our Stories</h1>
                                            </div>
                                            <div class="col-lg-6">
                                                <p class="slider-teaser">Hear the stories of East Asian immigrants who have made their mark in Melbourne, adding color and diversity to our city.</p>
                                                <hr class="s2">
                                                <div class="spacer-10"></div>
                                                <a class="btn-main mb10" href="@Url.Action("Index", "Events")">Join Festivities</a>&nbsp;
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="sw-overlay s2"></div>
                            </div>
                        </div>
                        <!-- Slides -->
                        <div class="swiper-slide" data-jarallax-element="150">
                            <div class="swiper-inner">
                                <img src="@Url.Content("~/Content/Customer/images/slider/3.jpg")" alt="Slide Image" style="width: 100%; height: auto;">
                                <div class="sw-caption">
                                    <div class="container">
                                        <div class="row gx-5 align-items-center">
                                            <div class="col-lg-8 mb-sm-20">
                                                <div class="subtitle s2 mb-4">Preserving Heritage</div>
                                                <h1 class="slider-title">Building an Inclusive Community</h1>
                                            </div>
                                            <div class="col-lg-6">
                                                <p class="slider-teaser">Learn how to recognize and oppose discrimination, striving together to create a more inclusive and understanding environment for East Asian immigrants.</p>
                                                <hr class="s2">
                                                <div class="spacer-10"></div>
                                                <a class="btn-main mb10" href="@Url.Action("Index", "Education")">Support Culture</a>&nbsp;
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="sw-overlay s2"></div>
                            </div>
                        </div>


                    </div>
                    <!-- If we need pagination -->
                    <div class="swiper-pagination"></div>

                    <!-- If we need navigation buttons -->
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-button-next"></div>

                    <!-- If we need scrollbar -->
                    <div class="swiper-scrollbar"></div>
                </div>
            </div>
        </section>

        <section class="no-top" id="epics">
            <div class="container">
                <div class="row g-4 mt-100 sm-mt-0 z-1000">
                    <div class="spacer-single d-lg-none d-sm-block"></div>
                    <div class="col-lg-3 col-md-6">
                        <div>
                            <img src="@Url.Content("~/Content/Customer/images/services/11.webp")" class="img-fullwidth rounded-20 mb20" alt="">
                            <h4>East Asian Melodies</h4>
                            <hr class="s2">
                            <p>Experience the vibrant celebrations of East Asian cultures right here in Melbourne. Join us in festivals that tell tales of heritage and unity, connecting the East with the West.</p>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <div>
                            <img src="@Url.Content("~/Content/Customer/images/services/22.webp")" class="img-fullwidth rounded-20 mb20" alt="">
                            <h4>Discover East Asia</h4>
                            <hr class="s2">
                            <p>Dive into the rich history and traditions of East Asia through educational workshops and events. Gain insights, understand values, and break down cultural barriers.</p>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <div>
                            <img src="@Url.Content("~/Content/Customer/images/services/33.webp")" class="img-fullwidth rounded-20 mb20" alt="">
                            <h4>Voices of East Asia</h4>
                            <hr class="s2">
                            <p>Listen to the authentic stories of East Asian immigrants in Melbourne. This anonymous space allows for the sharing of personal journeys, cultural memories, and the creation of a shared understanding.</p>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <div>
                            <img src="@Url.Content("~/Content/Customer/images/services/44.webp")" class="img-fullwidth rounded-20 mb20" alt="">
                            <h4>Cultural Insights              </h4>
                            <hr class="s2">
                            <p>Explore data-driven insights into the lives of East Asian communities in Melbourne. Understand the patterns, challenges, and successes of integration, aiming for a society free from discrimination.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="jarallax text-light">
            <img src="@Url.Content("~/Content/Customer/images/background/2.webp")" class="jarallax-img" alt="">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="subtitle s2 wow fadeInUp mb-3">Our Mission</div>
                        <h2 class="mb20 wow fadeInUp" data-wow-delay=".2s">Driven by the challenges faced by East Asian communities in Melbourne, we're committed to promoting multicultural understanding and respect. Our goal is to educate, unite, and empower, helping to diminish discrimination and celebrate our city's diverse heritage.</h2>
                        @*<a class="btn-main" href="contact.html">Let's Work Together</a>*@
                    </div>
                </div>
            </div>
        </section>

        <section id="cultural-events">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="subtitle s2 wow fadeInUp mb-3">Explore Cultures</div>
                        <h2 class="wow fadeInUp" data-wow-delay=".2s">Select your Jam</h2>
                    </div>
                </div>

                <div class="row justify-content-center">
                    @foreach (var culture in new[] { "Chinese", "Japanese", "Korean", "Filipino", "Vietnamese" })
                    {
                        <div class="col-lg-2 col-md-4 col-sm-6 text-center mb-sm-20 culture-item">
                            <a href="@Url.Action("Index", "Events", new { culture = culture })" class="culture-btn">
                                <div class="bg-color-2 rounded-30 mb20 bg-warning">
                                    <img src="@Url.Content($"~/Content/Customer/images/team/{culture}.jpg")" class="img-fluid" alt="@culture Culture">
                                </div>
                                <h4 class="mb-0">@culture</h4>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </section>


    </div>
    <!-- content close -->
</main>



@section Scripts{
    <style>

        .culture-item {
    padding-right: 5px;
    padding-left: 5px;
}

.culture-btn {
    display: block;
    text-decoration: none;
    color: inherit;
}
.culture-item .culture-btn {
    overflow: hidden;
    position: relative;
    border-radius: 30px;
    display: inline-block;
}

.culture-item .culture-btn img {
    transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
    display: block;
}

.culture-item .culture-btn:hover img {
    transform: scale(1.05);
    opacity: 0.7;
}

.culture-item h4 {
    transition: color 0.3s ease-in-out;
}

.culture-item:hover h4 {
    color: #d48810;
}

    </style>
    }