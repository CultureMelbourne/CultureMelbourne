@section Styles{



    <style>
        .canvasjs-chart-container {
            max-width: 100%;
            width: 100%;
            min-height: 300px;
            max-height: 600px;
            height: auto;
            overflow: visible;
        }



        .edu-img {
            height: 150px; /* Fixed height for all images */
            width: auto; /* Maintain aspect ratio */
            object-fit: cover; /* Cover the frame fully, might crop some parts */
        }

        .choose-item.highlight {
            border: 2px solid #FECE58;
            box-shadow: 0 0 20px 5px #FECE58;
        }

        .choose-item:hover {
            border: 2px solid #FECE58;
            box-shadow: 0 0 20px 5px #FECE58;
        }

        .timeline-image {
            max-width: 100%;
            max-height: 5%;
            object-fit: cover;
            width: 100%;
            height: auto;
        }

        .img-resize {
            max-width: 75%;
            max-height: auto;
            object-fit: contain;
        }

        .sidebar {
            position: fixed;
            top: 50%;
            transform: translateY(-50%);
            left: 0;
            width: 200px;
            height: 50%;
            background-color: #FECE58;
            overflow-x: hidden;
            overflow-y: auto;
            z-index: 1000;
            padding-top: 20px;
            padding-bottom: 20px;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
            border-radius: 10px;
        }

        .country-nav {
            list-style-type: none;
            padding: 0;
        }

        .nav-item {
            margin-bottom: 10px;
        }

        .country-link {
            display: block;
            text-decoration: none;
            color: black;
            font-weight: bold;
            padding: 10px 0;
            border-bottom: 1px solid #000;
        }

            .country-link:hover {
                background-color: #ccc;
            }

        .sub-nav {
            display: none;
            list-style-type: none;
            padding-left: 20px;
        }

            .sub-nav a {
                display: block;
                color: black;
                font-size: 0.9em;
            }

                .sub-nav a:hover {
                    background-color: #e6e6e6;
                }

        .country-link:hover,
        .country-link:focus {
            background-color: #ccc;
        }
    </style>
}