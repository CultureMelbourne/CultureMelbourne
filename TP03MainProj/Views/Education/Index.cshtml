
@{
    ViewBag.Title = "Education";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="welcome-section" class="">
    <div class="background-images">
        <div class="img1"></div>
        <div class="img2"></div>
        <div class="img3"></div>
        <div class="img4"></div>
        <div class="img5"></div>

    </div>
    <div class="container">
        <div class="text-center pb-5" id="welcome-education-text">
            <h1>Discover  the  Wonders  of  Multicultural  Education</h1>
            <button id="explore-button" class="btn btn-capsule">Discover More</button>
        </div>

        <div id="education-content" class="justify-content-center align-items-center" style="">
            <button id="exit-button" class="btn btn-secondary"></button>

            <div class="no-bottom no-top" id="">
                <div id="top"></div>

                <section id="subheader">
                    <div class="container">
                        <div class="row text-center ">
                            <div class="col-lg-8 offset-lg-2 ">
                                <h2 class="wow fadeInUp mb20" data-wow-delay=".2s">Embark on a Journey of Cultural Discovery</h2>
                                <ul class="crumb mb-5" id="education-nav">
                                    <li style="font-size: large;">
                                        <a class="text-dark" href="@Url.Action("Index", "Home")">Home</a>
                                    </li>
                                    <li style="font-size: large;" class="text-dark ms-2 me-2">></li>
                                    <li style="font-size: large; color: #d48810 " class="active">Education Center</li>
                                </ul>
                            </div>
                        </div>


                        <div class="row g-4 justify-content-center mt-5">
                            <div class="col-2 bg-img" style="background-image: url('@Url.Content("~/Content/Customer/images/team/Chinese.jpg")');" id="china-img">
                                <a class="btn-main overlay-btn" href="@Url.Action("DiverseCultures", "Education", new { country = "china" })">China</a>
                            </div>
                            <div class="col-2 bg-img" style="background-image: url('@Url.Content("~/Content/Customer/images/team/Japanese.jpg")');" id="japan-img">
                                <a class="btn-main overlay-btn" href="@Url.Action("DiverseCultures", "Education", new { country = "japan" })">Japan</a>
                            </div>
                            <div class="col-2 bg-img" style="background-image: url('@Url.Content("~/Content/Customer/images/team/Korean.jpg")');" id="korea-img">
                                <a class="btn-main overlay-btn" href="@Url.Action("DiverseCultures", "Education", new { country = "korea" })">Korea</a>
                            </div>
                            <div class="col-2 bg-img" style="background-image: url('@Url.Content("~/Content/Customer/images/team/Filipino.jpg")');" id="philippines-img">
                                <a class="btn-main overlay-btn" href="@Url.Action("DiverseCultures", "Education", new { country = "philippines" })">Philippines</a>
                            </div>
                            <div class="col-2 bg-img" style="background-image: url('@Url.Content("~/Content/Customer/images/team/Vietnamese.jpg")');" id="vietnam-img">
                                <a class="btn-main overlay-btn" href="@Url.Action("DiverseCultures", "Education", new { country = "vietnam" })">Vietnam</a>
                            </div>
                        </div>


                    </div>
                </section>
            </div>
        </div>
    </div>
</section>



@section Scripts{
    @Styles.Render("~/bundles/css")

<style>

        .btn-capsule {
            word-spacing: 0.25em;
            background-color: #d48810;
            color: black;
            border: none;
            padding: 10px 25px;
            border-radius: 50px;
            font-weight: bold;
            transition: background-color 0.3s, color 0.3s;
        }

            .btn-capsule:hover {
                background-color: #ffd700;
                color: #000;
            }
        .full-width-container {
            width: 100vw;
            max-width: 100%;
            margin: 0 auto;
            padding: 0 15px;
            box-sizing: border-box;
        }
        #welcome-education-text h1 {
            word-spacing: 0.25em;
        }



        .background-images {
            display: flex;
            justify-content: space-around;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;
        }
        #welcome-education-text{
            z-index: 3;
            position: relative;
        }
        #welcome-education-text h1 {
            color:white;
        }

            .background-images div {
                flex: 1;
                background-size: cover;
                background-position: center;
            }

        .img1 {
            background-image: url('@Url.Content("~/Content/Customer/images/study-case/3.jpg")');
        }

        .img2 {
            background-image: url('@Url.Content("~/Content/Customer/images/study-case/4.jpg")');
        }

        .img3 {
            background-image: url('@Url.Content("~/Content/Customer/images/study-case/5.jpg")');
        }

        .img4 {
            background-image: url('@Url.Content("~/Content/Customer/images/study-case/6.jpg")');
        }
        .img5 {
            background-image: url('@Url.Content("~/Content/Customer/images/study-case/7.jpg")');
        }

            #welcome-section.dark-overlay {
                position: relative;
            }

        #welcome-section {
            height: 100vh;
            background-size: cover;
            position: relative;
            display: flex;
            justify-content: flex-end;
            align-items: center;
            display: flex;
            flex-direction: column;
            padding-bottom: 15%;
        }
            #welcome-section::after {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(to top, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0.8) 10%, transparent 100%);
                z-index: 2;
            }


            #welcome-education-text {
                text-align: center;
            }

            #welcome-section.dark-overlay::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5);
            }

            /* Centered content */
        #education-content {
            display: none;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 20px;
            border-radius: 10px;
            background-color: #ffffffb2;
            z-index: 1000;
            height:80%;

        }


            #exit-button {
                position: absolute;
                top: 10px;
                right: 10px;
                font-size: 20px;
            }

            #exit-button {
                width: 50px;
                height: 50px;
                position: absolute;
                top: 10px;
                right: 10px;
                padding: 0;
                border: none;
                background-color: transparent;
            }

                #exit-button:before,
                #exit-button:after {
                    content: '';
                    position: absolute;
                    width: 3px;
                    height: 30px;
                    background-color: #000000;
                    top: 10px;
                    left: 50%;
                    transform: translateX(-50%);
                }

                #exit-button:before {
                    transform: rotate(45deg);
                }

                #exit-button:after {
                    transform: rotate(-45deg);
                }

        .img-fluid {
            max-width: 100%;
            max-height: 100%;
            height: auto;
        }

    .bg-img {
        position: relative;
        background-size: cover;
        height: 200px; /* Adjust the height as needed */
        width: 20%; /* Or adjust width based on your layout requirements */
    }

    .overlay-btn {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        background: rgba(255, 255, 255, 0.5); /* Light white overlay to enhance text visibility */
        display: flex;
        justify-content: center;
        align-items: center;
        color: #000; /* Text color */
        text-decoration: none;
        font-size: 20px; /* Text size */
    }




</style>

    <script>
        $(document).ready(function () {
            $('#explore-button').on('click', function () {
                $('#education-content').show();
                $('#welcome-education-text').hide(); // Hide welcome text
                $('#welcome-section').addClass('dark-overlay'); // Add class to apply dark overlay
            });
            $('#exit-button').on('click', function () {
                $('#education-content').hide();
                $('#welcome-education-text').show(); // Show welcome text
                $('#welcome-section').removeClass('dark-overlay'); // Remove class to remove dark overlay
            });
        });
    </script>
}
